@{
    ViewBag.Title = "Panel de Agente";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Panel de Agente</title>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#registro").click(function () {
                $("#form").show();
                $("#listado").hide();
            });
            $("#mostrar").click(function () {
                $("#listado").show();
                $("#form").hide();
            });
            function validarFormulario() {
                $("#formulario").validate();
            }
            $(document).ready(function () {
                validarFormulario();
            });
        });
    </script>
</head>
<body>
    <div>
        <h2>Bienbendido Al panel de Agente</h2>
    </div>
    <div class="btn-group">
        <button id="registro" type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Registro Sitios
        </button>
    </div>
    <div class="btn-group">
        <button id="mostrar" type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Listado Empresas
        </button>
    </div>
    <form id="formulario" action="" method="post">
        <div style="display: none" id="form">
            <h3>Formulario</h3>
            <div class="control-group">
                <div class="form-group floating-label-form-group controls mb-0 pb-2">
                    <label>IDSitio</label>
                    <input class="form-control" name="idSitio" id="idSitio" type="text" placeholder="idSitio" required="required" data-validation-required-message="Please enter your email address.">
                    <p class="help-block text-danger"></p>
                </div>
            </div>
            <div class="control-group">
                <div class="form-group floating-label-form-group controls mb-0 pb-2">
                    <label>idRegion</label>
                    <button type="button" class="btn btn-default dropdown-toggle form-control" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        IDRegion
                    </button>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="#" id="rest1">Occidente</a>
                        <a class="dropdown-item" href="#" id="museo1">Sur</a>
                        <a class="dropdown-item" href="#" id="hotel1">Norte</a>
                    </div>
                    <p class="help-block text-danger"></p>
                </div>
            </div>
            <div class="control-group">
                <div class="form-group floating-label-form-group controls mb-0 pb-2">
                    <label>Nombre</label>
                    <input class="form-control" name="nombre" id="nombre" type="text" placeholder="nombre" required="required" data-validation-required-message="Please enter your phone number.">
                    <p class="help-block text-danger"></p>
                </div>
            </div>
            <div class="control-group">
                <div class="form-group floating-label-form-group controls mb-0 pb-2">
                    <label>Descripcion</label>
                    <input class="form-control" name="descripcion" id="descripcion" type="text" placeholder="descripcion" required="required" data-validation-required-message="Please enter your phone number.">
                    <p class="help-block text-danger"></p>
                </div>
            </div>
            <div class="control-group">
                <div class="form-group floating-label-form-group controls mb-0 pb-2">
                    <label>Foto</label>
                    <input class="form-control" name="foto" id="foto" type="file" placeholder="foto" required="required" data-validation-required-message="Please enter your phone number.">
                    <p class="help-block text-danger"></p>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Aceptar" class="btn btn-default" onclick="Login()" />
                </div>
            </div>
        </div>
    </form>
   
        <div id="listado" style="display: none;">
            <h2>Listado de Empresas</h2>
            <div id="close"><a href="#" id="hide2">cerrar</a></div>
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">First</th>
                        <th scope="col">Last</th>
                        <th scope="col">Handle</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">1</th>
                        <td>Mark</td>
                        <td>Otto</td>
                        <td>mdo</td>
                    </tr>
                    <tr>
                        <th scope="row">2</th>
                        <td>Jacob</td>
                        <td>Thornton</td>
                        <td>fat</td>
                    </tr>
                    <tr>
                        <th scope="row">3</th>
                        <td>Larry</td>
                        <td>the Bird</td>
                        <td>twitter</td>
                    </tr>
                </tbody>
            </table>
        </div>
</body>
</html>
