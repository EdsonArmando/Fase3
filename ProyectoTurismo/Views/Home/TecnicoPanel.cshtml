@model IEnumerable<ProyectoTurismo.Models.ModeloConsultas>

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#hide").click(function () {
                $("#element").hide();
            });
            $("#mostrar").click(function () {
                $("#listado").show();
            });
            $("#show2").click(function () {
                $("#element2").show();
                $("#listado").hide();
                $("#element").hide();
            });
            $("#show").click(function () {
                $("#element").show();
                $("#listado").hide();
                $("#element2").hide();
            });
        });
    </script>
</head>
<body>
    <div>
        <h2>Bienbendido Al panel de Tecnico</h2>
    </div>
    <div class="btn-group">
        <button type="button" id="show" class="btn btn-danger dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            CrearRecorrido
        </button>

    </div>
    <div class="btn-group">
        <button type="button" id="show2" class="btn btn-danger dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Empresas
        </button>

    </div>
    <form action="/TecnicoPanel/Crear" id="searchForm" method="post">
        <div id="element" style="display: none;">
            <div class="control-group">
                <div class="form-group floating-label-form-group controls mb-0 pb-2">
                    <label>idRecorrido</label>
                    <input class="form-control" name="idRecorrido" id="username" type="text" placeholder="empresa" required="required" data-validation-required-message="Please enter your email address.">
                    <p class="help-block text-danger"></p>
                </div>
            </div>
            <div class="control-group">
                <div class="form-group floating-label-form-group controls mb-0 pb-2">
                    <label>Nombre</label>
                    <input class="form-control" name="dpi" id="username" type="text" placeholder="empresa" required="required" data-validation-required-message="Please enter your email address.">
                    <p class="help-block text-danger"></p>
                </div>
            </div>
            <div class="control-group">
                <div class="form-group floating-label-form-group controls mb-0 pb-2">
                    <label>NombreRecorrido</label>
                    <input class="form-control" name="nombre" id="username" type="text" placeholder="empresa" required="required" data-validation-required-message="Please enter your email address.">
                    <p class="help-block text-danger"></p>
                </div>
            </div>
            <div class="control-group">
                <div class="form-group floating-label-form-group controls mb-0 pb-2">
                    <label>FechaInicio</label>
                    <input class="form-control" name="fechaInicio" id="username" type="date" placeholder="empresa" required="required" data-validation-required-message="Please enter your email address.">
                    <p class="help-block text-danger"></p>
                </div>
            </div>
            <div class="control-group">
                <div class="form-group floating-label-form-group controls mb-0 pb-2">
                    <label>FechaFin</label>
                    <input class="form-control" name="fechaFin" id="username" type="date" placeholder="empresa" required="required" data-validation-required-message="Please enter your email address.">
                    <p class="help-block text-danger"></p>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" id="Login" value="Aceptar" class="btn btn-default" />
                </div>
            </div>
        </div>
    </form>
    <div id="element2" style="display: none;">
        <h2>Listado de Empresas</h2>
        <div id="close"><a href="#" id="hide2">cerrar</a></div>
        @ViewBag.mensaje
        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Region</th>
                    <th scope="col">Estado</th>
                    <th scope="col">Verificar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.empresa.idEmpresa</td>
                    <td>@item.empresa.nombre</td>
                    <td>@item.region.nombre</td>
                    <td>@item.empresa.estado</td>
                    <td>
                        <a href="@Url.Action("Edit", "empresas", new { id = item.empresa.idEmpresa })">Verificar</a>
                       
                    </td>
                </tr>
                }

            </tbody>
        </table>
    </div>
    <div class="container" id="listado" style="display: none;">
        <div class="[ row ]">
            <h2>Listado de Servicios</h2>
        </div>
        <div class="[ col-xs-12 col-sm-6 ]">

            <div class="[ form-group ]">
                <input type="checkbox" name="fancy-checkbox-primary" id="fancy-checkbox-primary" autocomplete="off" />
                <div class="[ btn-group ]">
                    <label for="fancy-checkbox-primary" class="[ btn btn-primary ]">
                        <span class="[ glyphicon glyphicon-ok ]"></span>
                        <span> </span>
                    </label>
                    <label for="fancy-checkbox-primary" class="[ btn btn-default active ]">
                        Transporte
                    </label>
                </div>
            </div>
            <div class="[ form-group ]">
                <input type="checkbox" name="fancy-checkbox-success" id="fancy-checkbox-success" autocomplete="off" />
                <div class="[ btn-group ]">
                    <label for="fancy-checkbox-success" class="[ btn btn-success ]">
                        <span class="[ glyphicon glyphicon-ok ]"></span>
                        <span> </span>
                    </label>
                    <label for="fancy-checkbox-success" class="[ btn btn-default active ]">
                        Internet
                    </label>
                </div>
            </div>
            <div class="[ form-group ]">
                <input type="checkbox" name="fancy-checkbox-info" id="fancy-checkbox-info" autocomplete="off" />
                <div class="[ btn-group ]">
                    <label for="fancy-checkbox-info" class="[ btn btn-info ]">
                        <span class="[ glyphicon glyphicon-ok ]"></span>
                        <span> </span>
                    </label>
                    <label for="fancy-checkbox-info" class="[ btn btn-default active ]">
                        Comida
                    </label>
                </div>
            </div>
            <div class="[ form-group ]">
                <input type="checkbox" name="fancy-checkbox-warning" id="fancy-checkbox-warning" autocomplete="off" />
                <div class="[ btn-group ]">
                    <label for="fancy-checkbox-warning" class="[ btn btn-warning ]">
                        <span class="[ glyphicon glyphicon-ok ]"></span>
                        <span> </span>
                    </label>
                    <label for="fancy-checkbox-warning" class="[ btn btn-default active ]">
                        Duchas
                    </label>
                </div>
            </div>
            <div class="[ form-group ]">
                <input type="checkbox" name="fancy-checkbox-danger" id="fancy-checkbox-danger" autocomplete="off" />
                <div class="[ btn-group ]">
                    <label for="fancy-checkbox-danger" class="[ btn btn-danger ]">
                        <span class="[ glyphicon glyphicon-ok ]"></span>
                        <span> </span>
                    </label>
                    <label for="fancy-checkbox-danger" class="[ btn btn-default active ]">
                        TV
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" id="Login" value="Aceptar" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
</body>
</html>
