@model IEnumerable<ProyectoTurismo.Models.ModeloConsultas>
@{
    ViewBag.Title = "TuristaPanel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/push.js/0.0.11/push.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#show").click(function () {
                $("#listFav").show();

            });

            function validarFormulario() {
                $("#formulario").validate();
            }
            $(document).ready(function () {
                validarFormulario();
            });
        });
    </script>

</head>

<h2>TuristaPanel</h2>

<div class="btn-group">
    <button type="button" id="show" class="btn btn-primary btn-lg" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Ver Favoritos
    </button>

</div>
<div class="btn-group">

    @Html.ActionLink("Empresas Favoritos", "EmpresaFavoritos", "Reporte", routeValues: null, htmlAttributes: new { @class = "btn btn-primary btn-lg", @role = "button" })

</div>

<div class="btn-group">

    @Html.ActionLink("Notificaciones", "Notificaciones", "Reporte", routeValues: null, htmlAttributes: new { @class = "btn btn-primary btn-lg", @role = "button" })

</div>
<div id="listFav" style="display: none;">
    <h2>Listado de FAVORITOS</h2>
    <table class="table">
        <tr>
            <th scope="col">idSitio</th>
            <th scope="col">Nombre</th>
            <th scope="col">Username</th>

        </tr>

        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.sitioTuristico.idSitio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sitioTuristico.nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.favorito.username)
                </td>

            </tr>


        }
    </table>
</div>
<h2></h2>
