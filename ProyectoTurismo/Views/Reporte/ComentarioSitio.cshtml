@model IEnumerable<ProyectoTurismo.Models.ModeloConsultas>
@{
    ViewBag.Title = "ComentarioSitio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ComentarioSitio</h2>
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">idSitio</th>
            <th scope="col">Comentario</th>
            <th scope="col">Usuario</th>
            <th scope="col">NombreSitio</th>
            <th scope="col">Region</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.sitioTuristico.idSitio</td>
            <td>@item.sitio_Comentario.comentario</td>
            <td>@item.sitio_Comentario.usuario</td>
            <td>@item.sitioTuristico.nombre</td>
            <td>@item.region.nombre</td>
        </tr>
        }

    </tbody>
</table>
